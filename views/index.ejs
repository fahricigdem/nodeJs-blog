          <p class="card-text"><%=blog.short%></p>
          <a href="/blog/<%=blog._id%>" class="btn btn-primary">Read the Blog</a>
        </div>
        <div class="card-footer text-muted">
            <%=blog.createdAt.toString().slice(0, 15)%>
        </div>
      </div>
      <%})%>
    </div>
</section>


